		<passive_effect name="DismemberChance" operation="base_set" value="0.3" tags="leg,arm"/>
	</append>
			<!--Head -->
	<append xpath="/items/item[contains(@name, 'Blunderbuss')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
	<!-- All Bullets -->
	<append xpath="/items/item[contains(@name, 'Bullet')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
	<!-- Arrows -->
	<append xpath="/items/item[contains(@name, 'Arrow')]/effect_group[@name='Base Effects']">
